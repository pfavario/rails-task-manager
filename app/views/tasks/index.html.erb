<h1 style="text-align:center; color:#3A405A"; >My Tasks</h1>

<div style="text-align:center; background-color:#E3E6EA width: 10%;">
<ul>
<% @tasks.each do |task| %>
  <li> <%= (link_to task.name, task_path(task), {style: "text-decoration:none;"})%>
 <%= task.done %> <%= link_to "update", edit_task_path(task) %> | <%= link_to "delete", task_path(task), method: :delete, data: {confirm: "Are you sure ?"} %>
  </li>
<% end %>
</ul>

<%= link_to "New Task", new_task_path %>
</div>
